{
    "$schema": "../schema.json",
    "id": "add-page",
    "version": "2.0.0",
    "meta": {
        "icon": "ðŸ“„",
        "titleKey": "ai.specs.addPage.title",
        "descriptionKey": "ai.specs.addPage.description",
        "category": "modification",
        "tags": ["add", "page", "content", "navigation"],
        "difficulty": "intermediate"
    },
    "parameters": [
        {
            "id": "routeName",
            "type": "text",
            "labelKey": "ai.specs.addPage.params.routeName.label",
            "helpKey": "ai.specs.addPage.params.routeName.help",
            "placeholderKey": "ai.specs.addPage.params.routeName.placeholder",
            "required": true
        },
        {
            "id": "routeParent",
            "type": "select",
            "labelKey": "ai.specs.addPage.params.routeParent.label",
            "helpKey": "ai.specs.addPage.params.routeParent.help",
            "optionsFrom": {
                "data": "routes",
                "prepend": [
                    {"value": "", "labelKey": "ai.specs.addPage.params.routeParent.options.root"}
                ]
            },
            "default": ""
        },
        {
            "id": "navPlacement",
            "type": "select",
            "labelKey": "ai.specs.addPage.params.navPlacement.label",
            "helpKey": "ai.specs.addPage.params.navPlacement.help",
            "options": [
                {"value": "menu", "labelKey": "ai.specs.addPage.params.navPlacement.options.menu"},
                {"value": "footer", "labelKey": "ai.specs.addPage.params.navPlacement.options.footer"},
                {"value": "both", "labelKey": "ai.specs.addPage.params.navPlacement.options.both"},
                {"value": "none", "labelKey": "ai.specs.addPage.params.navPlacement.options.none"}
            ],
            "default": "menu"
        },
        {
            "id": "navPosition",
            "type": "nodeSelector",
            "labelKey": "ai.specs.addPage.params.navPosition.label",
            "helpKey": "ai.specs.addPage.params.navPosition.help",
            "structures": ["page", "menu", "footer"],
            "allowTextHint": true,
            "condition": "navPlacement !== 'none'"
        }
    ],
    "preCommands": [
        {
            "command": "addRoute",
            "params": {
                "name": "{{param.routeName}}",
                "parent": "{{param.routeParent}}"
            },
            "abortOnFail": true
        }
    ],
    "examples": [
        {
            "id": "blog",
            "titleKey": "ai.specs.addPage.examples.blog.title",
            "promptKey": "ai.specs.addPage.examples.blog.prompt"
        },
        {
            "id": "faq",
            "titleKey": "ai.specs.addPage.examples.faq.title",
            "promptKey": "ai.specs.addPage.examples.faq.prompt"
        },
        {
            "id": "privacy",
            "titleKey": "ai.specs.addPage.examples.privacy.title",
            "promptKey": "ai.specs.addPage.examples.privacy.prompt"
        }
    ],
    "dataRequirements": [
        {
            "id": "routes",
            "command": "getRoutes",
            "extract": "data.flat_routes"
        },
        {
            "id": "languages",
            "command": "getLangList",
            "extract": "data"
        },
        {
            "id": "menuStructure",
            "command": "getStructure",
            "urlParams": ["menu", "showIds"],
            "extract": "data.structure"
        },
        {
            "id": "footerStructure",
            "command": "getStructure",
            "urlParams": ["footer", "showIds"],
            "extract": "data.structure"
        },
        {
            "id": "styles",
            "command": "getStyles",
            "extract": "data"
        },
        {
            "id": "helpEditStructure",
            "command": "help",
            "urlParams": ["editStructure"],
            "extract": "data"
        },
        {
            "id": "helpSetTranslationKeys",
            "command": "help",
            "urlParams": ["setTranslationKeys"],
            "extract": "data"
        }
    ],
    "relatedCommands": ["editStructure", "setTranslationKeys"],
    "recommendedModels": {
        "openai": ["gpt-4o", "gpt-4o-mini", "gpt-4-turbo"],
        "anthropic": ["claude-sonnet-4-20250514", "claude-3-5-sonnet-20241022"],
        "google": ["gemini-1.5-pro", "gemini-1.5-flash"],
        "deepseek": ["deepseek-chat"],
        "mistral": ["mistral-large-latest"]
    },
    "promptTemplate": "add-page.md",
    "outputFormat": "json-commands"
}
