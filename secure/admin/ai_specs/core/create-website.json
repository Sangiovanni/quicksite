{
    "$schema": "../schema.json",
    "id": "create-website",
    "version": "1.0.0",
    "meta": {
        "icon": "üåê",
        "titleKey": "ai.specs.createWebsite.title",
        "descriptionKey": "ai.specs.createWebsite.description",
        "category": "creation",
        "tags": ["create", "website", "multi-page", "from-scratch"],
        "difficulty": "advanced"
    },
    "parameters": [
        {
            "id": "multilingual",
            "type": "checkbox",
            "labelKey": "ai.specs.createWebsite.params.multilingual.label",
            "helpKey": "ai.specs.createWebsite.params.multilingual.help",
            "default": true
        },
        {
            "id": "languages",
            "type": "text",
            "labelKey": "ai.specs.createWebsite.params.languages.label",
            "placeholderKey": "ai.specs.createWebsite.params.languages.placeholder",
            "helpKey": "ai.specs.createWebsite.params.languages.help",
            "default": "en",
            "condition": "multilingual === true"
        },
        {
            "id": "pages",
            "type": "text",
            "labelKey": "ai.specs.createWebsite.params.pages.label",
            "placeholderKey": "ai.specs.createWebsite.params.pages.placeholder",
            "helpKey": "ai.specs.createWebsite.params.pages.help",
            "default": "home, about, services, contact"
        }
    ],
    "examples": [
        {
            "id": "business",
            "titleKey": "ai.specs.createWebsite.examples.business.title",
            "promptKey": "ai.specs.createWebsite.examples.business.prompt"
        },
        {
            "id": "restaurant",
            "titleKey": "ai.specs.createWebsite.examples.restaurant.title",
            "promptKey": "ai.specs.createWebsite.examples.restaurant.prompt"
        },
        {
            "id": "agency",
            "titleKey": "ai.specs.createWebsite.examples.agency.title",
            "promptKey": "ai.specs.createWebsite.examples.agency.prompt"
        }
    ],
    "dataRequirements": [
        {
            "id": "helpSetMultilingual",
            "command": "help",
            "urlParams": ["setMultilingual"],
            "extract": "data",
            "condition": "multilingual === true"
        },
        {
            "id": "helpAddLang",
            "command": "help",
            "urlParams": ["addLang"],
            "extract": "data",
            "condition": "multilingual === true"
        },
        {
            "id": "helpAddRoute",
            "command": "help",
            "urlParams": ["addRoute"],
            "extract": "data"
        },
        {
            "id": "helpEditStructure",
            "command": "help",
            "urlParams": ["editStructure"],
            "extract": "data"
        },
        {
            "id": "helpSetTranslationKeys",
            "command": "help",
            "urlParams": ["setTranslationKeys"],
            "extract": "data"
        },
        {
            "id": "helpEditStyles",
            "command": "help",
            "urlParams": ["editStyles"],
            "extract": "data"
        },
        {
            "id": "helpSetRootVariables",
            "command": "help",
            "urlParams": ["setRootVariables"],
            "extract": "data"
        }
    ],
    "relatedCommands": ["setMultilingual", "addLang", "addRoute", "editStructure", "setTranslationKeys", "editStyles", "setRootVariables"],
    "postCommands": [
        {
            "condition": "param.multilingual === true",
            "command": "editStructure",
            "params": {
                "type": "component",
                "name": "lang-switch",
                "structure": {
                    "tag": "div",
                    "params": { "class": "lang-switch" },
                    "children": {
                        "$each": "{{config.LANGUAGES_NAME}}",
                        "$item": {
                            "tag": "a",
                            "params": {
                                "href": "{{__current_page;lang={{$key}}}}",
                                "class": "lang-btn",
                                "data-lang": "{{$key}}"
                            },
                            "children": [{ "textKey": "__RAW__{{$value}}" }]
                        }
                    }
                }
            }
        }
    ],
    "recommendedModels": {
        "openai": ["gpt-4o", "gpt-4-turbo", "gpt-4o-mini"],
        "anthropic": ["claude-sonnet-4-20250514", "claude-3-5-sonnet-20241022", "claude-3-opus-20240229"],
        "google": ["gemini-1.5-pro", "gemini-2.0-flash-exp"],
        "deepseek": ["deepseek-chat", "deepseek-reasoner"],
        "mistral": ["mistral-large-latest", "codestral-latest"]
    },
    "providerNotes": {
        "openai": "GPT-4o produces excellent multi-page structures with consistent styling",
        "anthropic": "Claude excels at following the JSON command format precisely",
        "google": "Gemini 1.5 Pro handles complex multi-language setups well",
        "deepseek": "DeepSeek Reasoner may provide more thoughtful page organization"
    },
    "promptTemplate": "create-website.md",
    "outputFormat": "json-commands"
}
