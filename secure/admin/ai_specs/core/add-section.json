{
    "$schema": "../schema.json",
    "id": "add-section",
    "version": "2.0.0",
    "meta": {
        "icon": "âž•",
        "titleKey": "ai.specs.addSection.title",
        "descriptionKey": "ai.specs.addSection.description",
        "category": "modification",
        "tags": ["add", "section", "content", "structure"],
        "difficulty": "intermediate"
    },
    "parameters": [
        {
            "id": "targetPage",
            "type": "select",
            "labelKey": "ai.specs.addSection.params.targetPage.label",
            "helpKey": "ai.specs.addSection.params.targetPage.help",
            "optionsFrom": {
                "data": "routes"
            },
            "required": true
        },
        {
            "id": "sectionPosition",
            "type": "nodeSelector",
            "labelKey": "ai.specs.addSection.params.sectionPosition.label",
            "helpKey": "ai.specs.addSection.params.sectionPosition.help",
            "structures": ["page"],
            "allowTextHint": true
        }
    ],
    "examples": [
        {
            "id": "testimonials",
            "titleKey": "ai.specs.addSection.examples.testimonials.title",
            "promptKey": "ai.specs.addSection.examples.testimonials.prompt"
        },
        {
            "id": "cta",
            "titleKey": "ai.specs.addSection.examples.cta.title",
            "promptKey": "ai.specs.addSection.examples.cta.prompt"
        },
        {
            "id": "stats",
            "titleKey": "ai.specs.addSection.examples.stats.title",
            "promptKey": "ai.specs.addSection.examples.stats.prompt"
        }
    ],
    "dataRequirements": [
        {
            "id": "routes",
            "command": "getRoutes",
            "extract": "data.flat_routes"
        },
        {
            "id": "languages",
            "command": "getLangList",
            "extract": "data"
        },
        {
            "id": "pageStructure",
            "command": "getStructure",
            "urlParams": ["page", "{{param.targetPage}}", "showIds"],
            "extract": "data.structure",
            "condition": "param.targetPage"
        },
        {
            "id": "components",
            "command": "listComponents",
            "extract": "data.components"
        },
        {
            "id": "styles",
            "command": "getStyles",
            "extract": "data"
        },
        {
            "id": "helpEditStructure",
            "command": "help",
            "urlParams": ["editStructure"],
            "extract": "data"
        },
        {
            "id": "helpSetTranslationKeys",
            "command": "help",
            "urlParams": ["setTranslationKeys"],
            "extract": "data"
        }
    ],
    "relatedCommands": ["editStructure", "setTranslationKeys"],
    "promptTemplate": "add-section.md",
    "outputFormat": "json-commands"
}
